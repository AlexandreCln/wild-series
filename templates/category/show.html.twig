{% extends 'layout.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1 class="title">{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">
        <button class="btn btn-primary">Voir les Catégories</button>
    </a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">
        <button class="btn btn-primary">Éditer</button>
    </a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
