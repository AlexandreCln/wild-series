{% extends 'layout.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">Catégories</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}">Plus de détails</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <a href="{{ path('category_new') }}">
                <button class="btn btn-primary">Ajouter une catégorie</button>
            </a>
    </div>
{% endblock %}
