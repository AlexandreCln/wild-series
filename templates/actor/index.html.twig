{% extends 'layout.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <div class="container">


    <h1  class="m-5 d-flex justify-content-center">Acteurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    <a href="{{ path('actor_show', {'slug': actor.slug}) }}">
                        <button class="btn btn-primary">Voir plus</button>
                    </a>
                    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">
                        <button class="btn btn-primary">Éditer</button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">
        <button class="btn btn-primary">Créer</button>
    </a>
    </div>
{% endblock %}
