{% extends 'layout.html.twig' %}

{% block title %}Season{{ season.nbseason }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="media-body">
            <h1 class="mt-0">Saison {{ season.nbseason }} de <em>{{ program.title }}</em></h1>
            <p>{{ season.description }}</p>
            <hr>
            <h2>Liste des épisodes :</h2>
            <ul>
                {% for episode in episodes %}
                    <li>
                        <a href="{{ path('episode_show', {'slug': episode.slug }) }}">
                            Episode {{ episode.number }} : {{ episode.title }} </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <div>
                <a href="{{ path('program_show', {'slug': program.slug }) }}">
                    <button class="btn btn-primary">Voir le programme</button>
                </a>
                <a href="{{ path('program_index') }}">
                    <button class="btn btn-primary">Revenir aux séries</button>
                </a>
            </div>
            <div class="d-flex">
                <a href="{{ path('season_edit', {'id': season.id}) }}">
                    <button class="btn btn-primary mr-1">Éditer</button>
                </a>
                {{ include('season/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
