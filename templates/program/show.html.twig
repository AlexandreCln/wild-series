{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="m-5 d-flex justify-content-center">{{ program.title }}</h1>

        <div class="d-flex">
            <img class="img-thumbnail" src="{{ program.poster }}" alt="Affiche de {{ program.title }}">
            <div>
                <table class="table m-3">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ program.id }}</td>
                    </tr>
                    <tr>
                        <th>Résumé</th>
                        <td>{{ program.summary }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="m-3">


                    <strong>Acteurs :</strong>
                    <ul>
                        {% for actor in program.actors %}
                            <a href="{{ path('actor_show', {'name': actor.name}) }}"><li>{{ actor.name }} </li></a>
                        {% else %}
                            <li>Aucun acteur pour cette série</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="m-3">
                    {% for season in seasons %}
                        <a href="/wild/season/{{ season.id }}"><h2><span
                                        class="badge badge-secondary">Saison {{ season.nbseason }}</span> ({{ season.year }})</h2>
                        </a>
                    {% endfor %}
                </div>

            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <div>
            <a href="{{ path('program_index') }}">
                <button class="btn btn-primary">Revenir aux séries</button>
            </a>

            <a href="{{ path('program_edit', {'id': program.id}) }}">
                <button class="btn btn-primary">Éditer</button>
            </a>
            </div>
            {{ include('program/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
