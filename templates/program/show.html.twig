{% extends 'layout.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">{{ program.title }}</h1>

        <div class="d-flex">
            <img class="img-thumbnail" src="{{ program.poster }}" alt="Affiche de {{ program.title }}">
            <div>
                <table class="table m-3">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ program.id }}</td>
                    </tr>
                    <tr>
                        <th>Résumé</th>
                        <td>{{ program.summary }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="m-3">


                    <strong>Acteurs :</strong>
                    <ul>
                        {% for actor in program.actors %}
                            <a href="{{ path('actor_show', {'slug': actor.slug}) }}">
                                <li>{{ actor.name }} </li>
                            </a>
                        {% else %}
                            <li>Aucun acteur pour cette série</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="m-3">
                    {% for season in seasons %}
                        <a href="{{ path('season_show', {'id': season.id}) }}"><h2><span
                                        class="badge badge-secondary">Saison {{ season.nbseason }}</span>
                                ({{ season.year }})</h2>
                        </a>
                    {% endfor %}
                </div>

            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <div>
                <a href="{{ path('program_index') }}">
                    <button class="btn btn-primary">Revenir aux séries</button>
                </a>
            </div>

            <div class="d-flex">
                <a href="{{ path('program_edit', {'slug': program.slug}) }}">
                    <button class="btn btn-primary mr-1">Éditer</button>
                </a>
                {{ include('program/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
