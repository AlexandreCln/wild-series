{% extends 'layout.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">Commentaires</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Auteur</th>
                <th>Episode</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.date|date('d-m-Y') }}</td>
                    <td>{{ comment.author.username }}</td>
                    <td>{{ comment.episode.title }}</td>
                    <td>{{ comment.comment }}</td>
                    <td>{{ comment.rate }} / 5</td>
                    <td>
                        <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
